<h3><%= title %></h3>
<h4>Brev til <span style="text-transform: capitalize"><%= mottaker %></span><% if(date) { %>, <%= date %><% } %></h4>

<% if(image) { %>
    <img class="fullwidth img-thumbnail" src="<%= image %>" />
<% } %>

        <table class="sidebar-table">
            <% if(mottaker) { %>
                <tr>
                    <td>Info om mottaker:</td>
                    <td><%= kortinfo %></td>
                </tr>
            <% } %>            
            <% if(year) { %>
                <tr>
                    <td>Leveår, mottaker:</td>
                    <td><%= year %></td>
                </tr>
            <% } %>
            <% if(sted) { %>
            <tr>
                <td>Sted:</td>
                <td><span style="text-transform: capitalize"><%= sted %></span></td>
            </tr>
            <% } %>            
            <tr>
                <td>Institusjon:</td>
                <td><%= institution %></td>
            </tr>
            
        </table>
        
        <ul class="list-unstyled">
            <li><a href="<%= license %>" class="sidebar-link" target="_lisens"><i class="fa fa-external-link-square"></i> Lisens<a/></li>
            <li><a href="<%= source %>" class="sidebar-link" target="_HIS"><i class="fa fa-external-link-square"></i> Vis brevet på HIS sine hjemmesider<a/></li>
        </ul>        
