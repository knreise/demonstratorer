<h3><%= title %></h3>


<% if (distanceBearing) {Â %>
<div class="distance">
    <i class="fa fa-location-arrow" style="transform: rotate(<%= distanceBearing.rot %>deg);"></i> 
    <%= distanceBearing.dist %>
</div>
