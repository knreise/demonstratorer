<h4><%= title %></h4>

<% if(image) { %>
    <img class="fullwidth img-thumbnail" src="<%= image %>" />
<% } %>

        <table class="sidebar-table">
            <% if(avsender) { %>
                <tr>
                    <td>Avsender:</td>
                    <td><%= avsender %></td>
                </tr>
            <% } %> 
            <% if(mottaker) { %>
                <tr>
                    <td>Mottaker:</td>
                    <td><%= mottaker %></td>
                </tr>
            <% } %>		
            <% if(kortinfo) { %>
                <tr>
                    <td>Info om kontakt:</td>
                    <td><%= kortinfo %></td>
                </tr>
            <% } %>   
            <% if(year) { %>
                <tr>
                    <td>Leveår, kontakt:</td>
                    <td><%= year %></td>
                </tr>
            <% } %>
            <% if(sted) { %>
            <tr>
                <td>Sted:</td>
                <td><span style="text-transform: capitalize"><%= sted %></span></td>
            </tr>
            <% } %>            
            <tr>
                <td>Institusjon:</td>
                <td><%= institution %></td>
            </tr>
            
        </table>
        
        <ul class="list-unstyled">
            <li><a href="<%= license %>" class="sidebar-link" target="_lisens"><i class="fa fa-external-link-square"></i> Lisens<a/></li>
            <li><a href="<%= source %>" class="sidebar-link" target="_HIS"><i class="fa fa-external-link-square"></i> Vis brevet på prosjektets hjemmesider<a/></li>
        </ul>        
